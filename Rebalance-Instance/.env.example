# Proteksi endpoint
API_KEY=changeme

# Threshold utilisasi memory sumber (0.6 = 60%)
MAX_MEM_UTIL=0.6

# Polling & timeout
POLL_INTERVAL_SEC=10          # interval cek status migrasi
MIGRATION_TIMEOUT_SEC=1800    # 30 menit per migrasi
MIGRATION_SLEEP_SEC=5         # jeda kecil setelah selesai migrasi (update metrik)

# Batas keamanan
MAX_MOVES_PER_RUN=20          # maksimal jumlah instance dipindah dalam satu siklus

# =======================
# Kredensial OpenStack
# =======================
OS_AUTH_URL=http://keystone:5000/v3
OS_USERNAME=admin
OS_PASSWORD=your-secret
OS_PROJECT_NAME=admin
OS_USER_DOMAIN_NAME=Default
OS_PROJECT_DOMAIN_NAME=Default
OS_REGION_NAME=RegionOne

# Opsional: clouds.yaml
# OS_CLOUD=mycloud
